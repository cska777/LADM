{% extends "base.html.twig" %}

{% block body %}
    <h1 class="titre_new text-center">Ajouter un article</h1>
    
    <div class="articleForm d-flex justify-content-center">
        <div class='articlesForm'>
            {{ form_start(form) }}
                <div>
                    {{form_row(form.titre)}}
                </div>
                <div>
                    {{form_row(form.auteur)}}
                </div>
                <div>
                    {{form_row(form.date)}}
                </div>
                {% if article.image %}
                <div class="form-group ms-1 mb-3">
                    <label for="article_image">Image actuelle :</label>
                    <img src="{{ asset('upload/' ~ article.image) }}" alt="Miniature" class="img-thumbnail" style="max-width: 100px; max-height: 100px;">
                </div>
                {% endif %}
                <div>
                    {{form_row(form.image)}}
                </div>
                <div class="my-3">
                    {{form_row(form.description)}}
                </div>
                <div>
                    {{form_row(form.contenu)}}
                </div>
            <div class="d-flex justify-content-around my-3" >
                <button type="submit" class="btn btn-success me-5">Mettre Ã  jour</button>
            {{ form_end(form) }}
                <a class="btn btn-primary" href="{{ path('app_user_index') }}">Retour</a>
            </div>     
        </div>           
    </div> 


{% endblock %}