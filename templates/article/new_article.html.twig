{% extends "base.html.twig" %}

{% block body %}

    <h1 class="titre_new text-center">Ajouter un article</h1>
    
    <div class="articleForm d-flex justify-content-center">
        <div class="articlesForm">
        {{ form_start(form) }}
            <div>
                {{form_row(form.titre)}}
            </div>
            <div>
                {{form_row(form.auteur)}}
            </div>
            <div>
                {{form_row(form.date)}}
            </div>
                <p>Image</p>
            <div>
                {{form_row(form.image)}}
            </div>
            <div class="my-3">
                {{form_row(form.description)}}
            </div>
            <div>
                {{form_row(form.contenu)}}
            </div>
            
        <div class="my-3 d-flex justify-content-around">
            <button type="submit" class="btn btn-primary">Ajouter</button>
            <a class="btn btn-primary" href="{{ path('app_user_index') }}">Retour</a>
            </div>
        {{ form_end(form) }}
        </div>   
        </div>          
    </div> 

{% endblock %}